<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mbrainzsample" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorAccent</item>
        <item name="windowActionBar">false</item>
        <!-- TODO: flag should be deactivated -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.Mbrainzsample.Toolbar" parent="Theme.Mbrainzsample">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Widget.Mbrainzsample.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:theme">@style/Theme.Mbrainzsample.Toolbar</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="FormScreenTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="errorEnabled">true</item>
    </style>
</resources>